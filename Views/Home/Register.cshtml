@model TeachImageWebsite.Models.cMember

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V4</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/login/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/login/main.css">
    <!--===============================================================================================-->
</head>
<body>
    <br /><br /><br /><br />
    <div class="limiter">
        <div class="container-login100" style="background: #364150;">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
                <form class="login100-form validate-form" action="@Url.Action("Register")" method="post">
                    <span class="login100-form-title p-b-49">
                        註冊
                    </span>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
                            <label class="label-input100" for="cEmail">會員名稱</label>
                            <input class="input100" type="text" id="cName" name="cName" data-val="ture" data-val-required="會員ID欄位必填" placeholder="輸入您的ID">
                            <span class="focus-input100" data-symbol=""></span>
                            <span class="field-validation-valid text-danger" data-valmsg-for="cEmail" data-valmsg-replace="true"></span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-23" data-validate="Password is required">
                            <label class="label-input100" for="cPwd">密碼</label>
                            <input class="input100" data-val="true" data-val-required="輸入密碼 欄位是必要項。" id="cPwd" name="cPwd" type="password" placeholder="輸入您的密碼">
                            <span class="focus-input100 text-danger" data-symbol=""></span>
                            <span class="field-validation-valid text-danger" data-valmsg-for="cPwd" data-valmsg-replace="true"></span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
                            <label class="label-input100" for="cPPwd">確認密碼</label>
                            <input class="input100" data-val="true" data-val-required="確認密碼 欄位是必要項。" @*id="cPPwd" name="cPPwd"*@ type="password" placeholder="再次輸入密碼">
                            <span class="focus-input100" data-symbol=""></span>
                            <span class="field-validation-valid text-danger" data-valmsg-for="cPPwd" data-valmsg-replace="true"></span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-23" data-validate="Username is reauired">
                            <label class="label-input100" for="cEmail">電子信箱</label>
                            <input class="input100" data-val="true" data-val-email="不可空" data-val-required="電子信箱 欄位是必要項。" id="cEmail" name="cEmail" type="email" value="" placeholder="xxxx@gmail.com">
                            <span class="focus-input100" data-symbol=""></span>
                            <span class="field-validation-valid text-danger" data-valmsg-for="cEmail" data-valmsg-replace="true"></span>
                        </div>


                        <br /><br />

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn" value="註冊">
                                    註冊
                                    @ViewBag.Message
                                </button>
                            </div>
                        </div>
                        <br />
                        <div>
                            @Html.ActionLink("Back to List", "Index")
                        </div>

                        <br /><br />

                        <div class="flex-c-m">
                            <a href="#" class="login100-social-item bg1">
                                <i class="fa fa-facebook"></i>
                            </a>

                            <a href="#" class="login100-social-item bg2">
                                <i class="fa fa-twitter"></i>
                            </a>

                            <a href="#" class="login100-social-item bg3">
                                <i class="fa fa-google"></i>
                            </a>
                        </div>
                    }
                </form>

            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Scripts/login/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/popper.js"></script>
    <script src="~/Scripts/login/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/moment.min.js"></script>
    <script src="~/Scripts/login/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Scripts/login/main.js"></script>

</body>
</html>